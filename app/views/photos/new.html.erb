<h3>Upload Image</h3>

<dir class="container">
  <%= form_for @photo do |f| %>
    <div class="form-group row">
      <div class="col-md-2">
        <label for="exampleFormControlFile1">Upload File</label>
      </div>
      <div class="col-md-8">
        <%= f.file_field :avatar, class: "form-control-file" %>
      </div>
    </div>

    <div class="actions text-center">
      <%= f.submit "Create", class: "btn btn-success" %>
    </div>
  <% end %>
</dir>
