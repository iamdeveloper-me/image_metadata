<div class="container-fluid pageheading">
  <div  class="container"><h3>Upload Image</h3></div>
</div>

<div  class="container-fluid whitebox">
  <div class="container padd15px martop15px">
     <dir class="container">
      <%= form_for @photo do |f| %>
        <div class="form-group row">
          <div class="col-md-3">
            <label for="exampleFormControlFile1">Upload File</label>
          </div>
          <div class="col-md-6">
            <%= f.file_field :avatar, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-3"></div>
          <div class="actions col-md-6">
            <%= f.submit "Create", class: "btn btn-success" %>
          </div>
       </div>        
      <% end %>
    </dir>
  </div>
</div>
