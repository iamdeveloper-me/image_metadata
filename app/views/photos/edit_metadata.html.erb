<h3>Update Metadata</h3>

<%= form_tag({action: 'update_metadata'}, {method: :get}) do %>
  <%= hidden_field_tag :id, @photo.id %>
  <div class="form-group row">
    <div class="col-md-2">
      <%= label_tag(:title, "Title") %>
    </div>
    <div class="col-md-6">
      <%= text_field_tag :title,
        @image.title,
        autofocus: true,
        autocomplete: "off",
        class: 'form-control'
      %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-2">
      <%= label_tag(:comment, "Comment") %>
    </div>
    <div class="col-md-6">
      <%= text_field_tag :comment,
        @image.comment,
        autocomplete: "off",
        class: 'form-control'
      %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-2">
      <%= label_tag(:user_comment, "User Comment") %>
    </div>
    <div class="col-md-6">
      <%= text_field_tag :user_comment,
        @image.user_comment,
        autocomplete: "off",
        class: 'form-control'
      %>
    </div>
  </div>

  <div class="actions text-center">
    <%= submit_tag "Update", class: "btn btn-success" %>
  </div>
<% end %>

