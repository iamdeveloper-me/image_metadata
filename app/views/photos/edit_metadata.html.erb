			<h4 class="forminnerheading paddtop0px">XMP Tags:</h4>

			<div class="form-group row">
				<div class="col-md-3">
					<%= label_tag(:title, "Title") %>
				</div>
				<div class="col-md-6">
					<%= text_field_tag :title,
						@image.title,
						autofocus: true,
						autocomplete: "off",
						class: 'form-control'
					%>
				</div>
			</div>

			<div class="form-group row">
