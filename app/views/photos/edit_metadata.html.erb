<div class="container-fluid pageheading">
	<div  class="container"><h3>Update Metadata</h3></div>
</div>

<div  class="container-fluid whitebox">
	<div class="container padd15px martop15px">
		<%= form_tag({action: 'update_metadata'}, {method: :get}) do %>
