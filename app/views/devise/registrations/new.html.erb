<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%#= devise_error_messages! %>

  <div class="form-group row">
    <div class="col-md-2">
      <%= f.label :first_name %>
    </div>
    <div class="col-md-6">
      <%= f.text_field :first_name,
        autofocus: true,
        autocomplete: "off",
        class: 'form-control'
      %>
      <%= render partial: 'layouts/form_field_error', locals: { field_error: f.object.errors.messages[:first_name] } %>
      
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-2">
      <%= f.label :last_name %>
    </div>
    <div class="col-md-6">
      <%= f.text_field :last_name,
        autofocus: true,
        autocomplete: "off",
        class: 'form-control'
      %>
      <%= render partial: 'layouts/form_field_error', locals: { field_error: f.object.errors.messages[:last_name] } %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-2">
      <%= f.label :email %>
    </div>
    <div class="col-md-6">
      <%= f.email_field :email,
        autofocus: true,
        autocomplete: "off",
        class: 'form-control'
      %>
      <%= render partial: 'layouts/form_field_error', locals: { field_error: f.object.errors.messages[:email] } %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-2">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
    <div class="col-md-6">
      <%= f.password_field :password,
        autocomplete: "off",
        class: 'form-control'
      %>
      <%= render partial: 'layouts/form_field_error', locals: { field_error: f.object.errors.messages[:password] } %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-2">
      <%= f.label :password_confirmation %>
    </div>
    <div class="col-md-6">
      <%= f.password_field :password_confirmation,
        autocomplete: "off",
        class: 'form-control'
      %>
      <%= render partial: 'layouts/form_field_error', locals: { field_error: f.object.errors.messages[:password_confirmation] } %>
    </div>
  </div>

  <div class="actions text-center">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
<% end %>
